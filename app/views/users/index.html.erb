<% provide :title, t(".all_users") %>
<h1><%= t ".all_users"%></h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: Settings.avatar_size %>
      <%= link_to user.name, user %>
      <% if current_user.admin? && current_user != user %>
        | <%= link_to t(".delete"), user, method: :delete,
          data: {confirm: t(".are_you_sure")} %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
