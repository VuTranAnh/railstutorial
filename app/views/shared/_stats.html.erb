<% @user ||= current_user %>
<div class="stats">
  <%= link_to following_index_path @user do %>
    <strong class="stat" id="following">
      <%= @user.following.count %>
    </strong>
    <%= t ".following" %>
  <% end %>

  <%= link_to followers_path @user do %>
    <strong class="stat" id="followers">
      <%= @user.followers.count %>
    </strong>
    <%= t ".followers" %>
  <% end %>
</div>
